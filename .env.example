# Required: GitHub authentication
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_REPOS=myorg/repo1,myorg/repo2

# Required: Webhook security
WEBHOOK_TOKEN=your-shared-secret-here

# Optional: Zenhub configuration
ZENHUB_TOKEN=
ZENHUB_WORKSPACE_IDS=workspace1,workspace2
ZENHUB_PIPELINE_NAME=In Progress

# Optional: Mode and dispatch
MODE=relay
DISPATCH_EVENT=zenhub_in_progress

# Optional: Branch strategy
BASE_BRANCH_DEFAULT=develop
BASE_BRANCH_HOTFIX=hotfix_branch
HOTFIX_LABEL=hotfix

# Optional: Server (Railway sets PORT automatically)
PORT=8000
